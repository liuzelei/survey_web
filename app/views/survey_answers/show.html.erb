<div class="list_1">
  <div class="list_title">
    <div class="list_title_left">调查问卷记录[<%= link_to "照片", @survey_answer。image, { :class => 'screenshot', :target => "_blank" } %>][<%= link_to '返回', survey_answers_path, { :class => 'screenshot' } %>]</div>
    <div class="list_title_right">
    </div>
  </div>
  <div class="tab_content">
    <table width="100%" cellpadding="0" cellspacing="0" class="table1">
      <tbody>
		<% @survey_answer.survey_suite.survey_questions.each do |q| %>
		<tr>
			<td>
				<b><%= q.order %>.<%= q.title %></b>:<% answer_item = @survey_answer.survey_answer_items.where("survey_question_id = :survey_question_id", :survey_question_id => q.id).first %><% if answer_item != nil %>
				<%= answer_item.body %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>
				<% q.survey_question_items.each do |i| %>
				<%= i.order %>,
				<%= i.body %>
				<% end %>
			</td>
		</tr>
		<% end %>
      </tbody>
    </table>
  </div>
</div>